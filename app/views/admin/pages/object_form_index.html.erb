<h1>Listing Forms</h1>
<% unless @pages.empty? %>
<table>
  <tr>
    <th>Title</th>
    <th>Perma link</th>
    <th>Home page</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.title %></td>
    <td><%= page.perma_link %></td>
    <td> <%=  page.home_page ? "Yes" : "No" %></td>
    <td><%= page.email %></td>
    <td><%= link_to "Form Components",[page,:form_components] %></td>
    <td><%= link_to "Submissions",[page,:form_submissions] %></td>
    <td><%= link_to "Show", :action=>"show",:id=>page %></td>
    <td><%= link_to "Edit", edit_page_path(page) %></td>
    <td><%= link_to "Destroy", {:action=>"destroy",:id=>page}, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<% else %>
<%= 'You do not have any forms. Create now.' %>
<% end %>
